<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/textColor</item>
        <item name="colorPrimaryDark">@color/textColor</item>
    </style>

    <style name="ToolbarTheme" parent="Base.V7.Widget.AppCompat.Toolbar">

        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="ActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/textColor</item>
    </style>

</resources>
